{# @var field \EasyCorp\Bundle\EasyAdminBundle\Dto\FieldDto #}
{# @var entity \EasyCorp\Bundle\EasyAdminBundle\Dto\EntityDto #}

{% extends 'base.html.twig' %}

{% block body %}
    <div class="grid grid-cols-3 gap-4">
        {% for jury in field.value %}
            <div class="flex items-center justify-end">
                <div>
                    <p>Nom du concours : {{ jury.contest.name }}</p>
                    <p>Date d'invitation : {{ jury.invitationDate|date('d/m/Y') }}</p>
                    <p>Date d'acceptation : {{ jury.acceptanceDate|date('d/m/Y') }}</p>
                </div>
                <span class="inline-flex items-center justify-center px-2.5 py-1.5 rounded-full text-xs font-medium text-white bg-red-500 bg-opacity-50">
                    vote
                </span>
            </div>
        {% endfor %}
    </div>
{% endblock %}
